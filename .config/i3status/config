cpu_usage {
  format = "%usage"
}

tztime utc {
  format = "UTC %H:%M"
  timezone = 'Etc/UTC'
}

tztime pacific {
  format = "CA %I:%M%P"
  timezone = 'America/Vancouver'
}

tztime mountain {
  format = "MTN %I:%M%P"
  timezone = 'America/Denver'
}

tztime central {
  format = "CT %I:%M%P"
  timezone = 'America/Chicago'
}

tztime europe {
  format = "EU %I:%M%P"
  timezone = "Europe/Berlin"
}

tztime uk {
  format = "UK %I:%M%P"
  timezone = "Europe/London"
}

tztime local {
  format = "%m/%d %I:%M"
}

