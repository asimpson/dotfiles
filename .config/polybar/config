[module/email]
type = custom/script

; Command to be executed (using "/bin/sh -c [command]")
exec = "~/.bin/mail-count.sh"
click-left="/usr/local/bin/mail-preview"

; Seconds to sleep between updates
; Default: 5 (0 if `tail = true`)
interval = 120
format-prefix = "✉ "

[module/notif]
type = custom/script

; Command to be executed (using "/bin/sh -c [command]")
